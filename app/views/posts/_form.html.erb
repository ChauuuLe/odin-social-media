<div class="form-container">
  <%= form_for @post do |f| %>
    <div class="mb-4">
      <%= f.label :title, "Title", class: "form-label" %>
      <%= f.text_field :title, placeholder: "Your title here", class: "form-input" %>
    </div>
    <div class="mb-4">
      <%= f.label :content, "Content", class: "form-label" %>
      <%= f.text_area :content, placeholder: "Your post content goes here", class: "form-textarea" %>
    </div>
    <%= f.submit "Post", class: "form-submit" %>
  <% end %>
</div>
